<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#E1FDD2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        tools:context="com.capstone.ricedoc.BookCard3">

        <TextView
            android:id="@+id/textView"
            android:textSize="14pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_card3.1"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"/>

        <TextView
            android:id="@+id/textView2"
            android:textSize="11pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/content_card3.2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/pagtanum"/>

        <TextView
            android:id="@+id/textView3"
            android:textSize="11pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="5dp"
            android:backgroundTint="#00FFFFFF"
            android:text="@string/content_card3.3"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginHorizontal="20dp"/>

        <TextView
            android:id="@+id/textView4"
            android:textSize="11pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:gravity="start"
            android:text="@string/title_card3.4"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:textSize="11pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="5dp"
            android:backgroundTint="#00FFFFFF"
            android:text="@string/content_card3.5"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginHorizontal="20dp"/>

        <TextView
            android:id="@+id/textView6"
            android:textSize="11pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:textStyle="bold"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/title_card3.6"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

        <TextView
            android:id="@+id/textView7"
            android:textSize="11pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="5dp"
            android:backgroundTint="#00FFFFFF"
            android:text="@string/content_card3.7"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginHorizontal="20dp"/>

        <TextView
            android:id="@+id/textView8"
            android:textSize="11pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/content_card3.7.5"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/textView9"
            android:textSize="11pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:gravity="start"
            android:text="@string/title_card3.8"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView10"
            android:textSize="11pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView9"
            android:layout_marginTop="5dp"
            android:backgroundTint="#00FFFFFF"
            android:text="@string/content_card3.9"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginHorizontal="20dp"/>

        <TextView
            android:id="@+id/textView11"
            android:textSize="11pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:gravity="start"
            android:text="@string/title_card3.10"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView12"
            android:textSize="11pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView11"
            android:layout_marginTop="5dp"
            android:backgroundTint="#00FFFFFF"
            android:text="@string/content_card3.11"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginHorizontal="20dp"/>

        <TextView
            android:id="@+id/textView13"
            android:textSize="11pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView12"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:text="@string/title_card3.12"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView14"
            android:textSize="11pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView13"
            android:layout_marginTop="5dp"
            android:backgroundTint="#00FFFFFF"
            android:text="@string/content_card3.13"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginHorizontal="20dp"/>
    </RelativeLayout>
</ScrollView>
